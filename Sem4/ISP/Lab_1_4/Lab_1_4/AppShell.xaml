<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="Lab_1_4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Lab_1_4"
    xmlns:progressBar="using:Lab_1_4.ProgressBar"
    xmlns:cosmeticsBrand="using:Lab_1_4.Pages.CosmeticsBrand"
    xmlns:currencies="using:Lab_1_4.Pages.Currencies"
    FlyoutBehavior="Flyout">

    <ShellContent
        Title="Currencies"
        ContentTemplate="{DataTemplate currencies:CurrenciesPage}"
        Route="CurrenciesPage" />

    <ShellContent
        Title="Calculator"
        ContentTemplate="{DataTemplate local:CalculatorPage}"
        Route="CalcPage" />

    <ShellContent
        Title="Progress Bar"
        ContentTemplate="{DataTemplate progressBar:ProgressBarPage}"
        Route="PbPage" />

    <ShellContent
        Title="Cosmetics brands"
        ContentTemplate="{DataTemplate cosmeticsBrand:CosmeticsBrandPage}"
        Route="BrandPage" />



</Shell>